@using Cuahanggiayfinal.Models
@model List<Cuahanggiayfinal.Models.size>
@{
    ViewBag.Title = "GetSize";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">@Html.ActionLink("Thêm Size", "ThemSize")</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                            <th>
                                Id
                            </th>
                            <th>
                                Thể Loại giày
                            </th>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count(); i++)
                                {
                                <tr>
                                    <td>
                                        @Model[i].sizeId
                                    </td>
                                    <td>
                                        @Model[i].sizegiay
                                    </td>
                                    <td>
                                        <a><img src="~/image/flags/pencil.png" style="width:20px" /></a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("XoaSize","Admin",new {id = @Model[i].sizeId })"><img src="~/image/flags/trash.png" style="width:20px" /></a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

